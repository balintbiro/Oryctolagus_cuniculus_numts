#Input and Output of the FASTA file
fasta_file = r"input_file_name"
output_name = "two_ch_MT.fasta"

#Function that reads the fasta file and creates two seperations for the name and sequence
def read_fasta(fp):
        name, seq = None, []
        for line in fp:
            line = line.rstrip()
            if line.startswith(">"):
                if name: yield (name, ''.join(seq))
                name, seq = line, []
            else:
                seq.append(line)
        
        #Joins everything together and reverses the complementary string
        if name: yield (name, ''.join(seq))
    
#Opens the fasta file and prints the name + a double copy of the sequence
with open(fasta_file) as fp:
    for name, seq in read_fasta(fp):
        print (name,'\n', seq, seq)

#Writes to a new FASTA file with the double copy of the sequence on a seperate row
file = open(output_name, "w")
file.writelines([''.join(name),"\n",''.join(seq), ''.join(seq)])
file.close()
